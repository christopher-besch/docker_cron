# redirect output to stdout and stderr of cron process -> usable docker logs
{{ range $cron_time, $containers := groupBy $ "Env.CRON_TIME" }}
    {{ if trim $cron_time }}
        {{ range $container := $containers }}
{{ printf $cron_time }} docker kill -s HUP {{ printf $container.ID }} 1>/proc/$(cat /var/run/crond.pid)/fd/1 2>/proc/$(cat /var/run/crond.pid)/fd/2
        {{ end }}
    {{ end }}
{{ end }}
